# Backend Environment Variables

# Node environment
NODE_ENV=development

# Server configuration
PORT=3001
API_URL=http://localhost:8888/.netlify/functions/api
FRONTEND_URL=http://localhost:3000

# Auth0 configuration
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_AUDIENCE=https://api.threefold.store
AUTH0_CALLBACK_URL=http://localhost:8888/.netlify/functions/auth/callback

# Database configuration
MONGODB_URI=mongodb://localhost:27017/tfcloud
FAUNADB_SECRET=your-faunadb-secret

# Stripe configuration
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Logging
LOG_LEVEL=debug