{
  "name": "tfcloud-marketplace-backend",
  "version": "0.1.0",
  "description": "ThreeFold Cloud Marketplace Backend",
  "main": "index.js",
  "scripts": {
    "dev": "netlify dev",
    "build": "netlify build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/controllers",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "setup:fauna": "node scripts/setup-fauna.js",
    "setup:mongodb": "node scripts/setup-mongodb.js",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@netlify/functions": "^1.6.0",
    "auth0": "^3.3.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-jwt": "^8.4.1",
    "express-jwt-authz": "^2.4.1",
    "express-validator": "^7.0.1",
    "faunadb": "^4.8.0",
    "jwks-rsa": "^3.0.1",
    "mongoose": "^7.5.0",
    "rate-limiter-flexible": "^2.4.1",
    "serverless-http": "^3.2.0",
    "stripe": "^12.0.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "netlify-cli": "^15.0.0",
    "prettier": "^2.8.7",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4",
    "uuid": "^9.0.0"
  }
}
